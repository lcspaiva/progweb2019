<div id="curso" class="container mt-4">
    <div class="row">
      <div class="col-sm">
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Jogo</a></li>
            <li class="breadcrumb-item active" aria-current="page">Ranking</li>
          </ol>
        </nav>
      </div>
    </div>
    <div class="row">
      <div class="col-sm">
        <h1>Ranking dos Jogadores</h1>
      </div>
    </div>
    <div class="row">
        <div class="col-sm">
          <table class="table table-hover">
            <thead>
              <tr>
                <th scope="col">Jogador</th>
                <th scope="col">Pontuação</th>
                <th scope="col">Data/Hora</th>
              </tr>
            </thead>
            <!-- Para cada campo da jogada vamos pesquisar o id do jogador na lista de jogadores, quando encontrarmos
              vamos mostrar o nome associado a esse id -->
            <!-- Esquema para encontrar: ao encontrar o jogador uma flag é ativada, caso essa flag permaneça inalterada
              percebemos que ele não encontrou o jogador, logo imprimiremos que ele foi deletado (testado OK)-->
            <!-- Problema: se um novo usuario for criado com o mesmo id ele irá  pegar a pontuação do cara que foi deletado
            e que tinha esse id antes :/ -->
            <tbody>
              <% jogadas.forEach(function(jogada) { %>
                <% var flag %>
              <tr>
                <% flag = 0 %>
                <% jogadores.forEach(function(jogador) { %>
                  <% if(jogador.id == jogada.jogador) { %>
                    <% flag = 1 %>
                    <th scope="row"><%= jogador.fullName %></th>
                  <% } %>
                <% }) %>
                <% if (flag == 0) { %>
                    <th scope="row">Deletado</td>
                <% } %>  
                <td><%= jogada.pontuacao %></td>
                <td><%= jogada.data %></td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>