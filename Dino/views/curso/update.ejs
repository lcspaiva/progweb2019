<div id="curso" class="container mt-4">
    <div class="row">
        <div class="col-sm">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item"><a href="/curso">Cursos</a></li>
                <li class="breadcrumb-item active" aria-current="page">Editar</li>
            </ol>
        </nav>
        </div>
    </div>
    <div class="row">
        <div class="col-sm">
            <h2>Formulário de Edição</h2>
            <% if(typeof error !== 'undefined') { %>
                <p><%= error %></p>
            <% } else {%>
            <!-- o formulario enviara para o controlador os dados, como uma espécie de payload
                , no controlador as informações serão enviadas ao banco-->
            <!-- o name, é o nome usado para puxar do payload, vide um objeto-->    
            <form action="/curso/update/<%= curso.id %>" method="POST">
                <div class="form-group">
                    <label for="sigla">Sigla</label>
                    <input type="text" class="form-control" name="sigla" id="sigla" value="<%= curso.sigla %>">
                </div>
                <div class="form-group">
                    <label for="nome">Nome do Curso</label>
                    <input type="text" class="form-control" name="nome" id="nome" value="<%= curso.nome %>">
                </div>
                <div class="form-group">
                    <label for="descricao">Descrição</label>
                    <textarea class="form-control" name="descricao" id="descricao" rows="3"><%= curso.descricao %></textarea>
                </div>
                <input type="hidden" name="_csrf" value="<%= _csrf%>">
                <button type="submit" class="btn btn-success">Enviar</button>
            </form>
            <a class="btn btn-primary" href="/curso" role="button">Cancelar</a>
            <% } %>
        </div>
    </div>
</div>