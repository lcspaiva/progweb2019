<div id="curso" class="container mt-4">
    <div class="row">
      <div class="col-sm">
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">Cursos</li>
          </ol>
        </nav>
      </div>
    </div>
    <div class="row">
        <div class="col-sm">
            <h1 style="color:red;">Exclusão de Curso </h1>
            <hr>
            <% if(typeof error !== 'undefined') { %>
                <p><%= error %></p>
            <% } else {%>
            <h4 style="color:red;">Sigla</h4>
            <%= curso.sigla %>
            <hr>
            <h4 style="color:red;">Nome</h4>
            <%= curso.nome %>
            <hr>
            <h4 style="color:red;">Descrição</h4>
            <%= curso.descricao %>
            <% } %>
            <hr>
            //form post action delete
            <!-- enviando para o controlador -->
            <h2 style="color: red"> Atenção, "o que foi feito não pode ser desfeito" Zedão</h2>
            <form action="/curso/delete/<%= curso.id %>" method="POST">
              <input type="hidden" name="_csrf" value="<%= _csrf%>">
              <button class="btn btn-danger" type="submit">Excluir</button>
            </form>
            <a class="btn btn-primary" href="/curso" role="button">Cancelar</a>
        </div>
    </div>
  </div>
  